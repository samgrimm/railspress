<%= content_tag(:div, class: "#{text.col_span} card sorty-card", data: {id:"#{text.id}"}) do -%>
  <div class="feature btn-group pull-right">
      <%= link_to fa_icon('pencil'), edit_website_page_widget_path(@website, @page, text, locale:I18n.locale), class:'btn btn-small btn-primary', id:"edit_widget_#{text.id}"%>
      <%= link_to fa_icon('trash'), website_page_widget_path(@website, @page, text, locale:I18n.locale), method: :delete, class:'btn btn-small btn-danger', id:"delete_widget_#{text.id}" %>
  </div>
  <div class="card-block">
      <%= "#{text.id} - #{text.position}" %>
      <h3><%= text.title %></h3>
      <p><%= text.content %></p>
  </div>
<% end -%>
