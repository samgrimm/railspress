<% if @blog.posts.empty? %>
  <h2>Now you can start writing your blog</h2>
  <%= link_to 'Blog on Navbar?', '#', id: "blogToNavbar" %>
<% else %>
  <h2><%= t('.Posts') %></h2>

  <hr>

  <div>
    <% @posts.each do |post| %>
      <div class="content">
        <p><%= post.title %></p>
        <p><%= post.content %></p>
        <p><%= post.status %></p>
        <p><%= post.blog %></p>
        <p><%= link_to post.status, toggle_status_website_blog_post_path(@website, @blog, post, locale: I18n.locale), id:"toggle_status_#{post.id}" %></p>
        <p><%= link_to t('show'), website_blog_post_path(@website, @blog, post, locale: I18n.locale) %></p>
        <p><%= link_to t('edit'), edit_website_blog_post_path(@website, @blog,post,locale: I18n.locale) %></p>
        <p><%= link_to t('delete'), website_blog_post_path(@website, @blog,post, locale: I18n.locale), method: :delete, data: { confirm: t('are_you_sure') }, id:"delete_post_#{post.id}" %></p>
      </div>
    <% end %>
  </div>

  <br>
<% end %>

<%= link_to fa_icon('plus 2x'), new_website_blog_post_path(@website, @blog, locale:I18n.locale), id: "addPost" %>
