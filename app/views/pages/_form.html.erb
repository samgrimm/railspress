<% if @page.errors.any? %>
  <% @page.errors.full_messages.each do |error| %>
    <li><%= alert_generator error %></li>
  <% end %>
<% end %>

  <div class="from-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :layout_id, t(".layout") %>
    <%=f.collection_radio_buttons(:layout_id, Layout.all, :id, :image) do |b| %>
      <%=b.label { b.radio_button + image_tag(b.object.image) } %>
    <% end %>
  </div>
  <div class="from-group">
    <%= f.label :content %>
    <%= f.text_area :content, class:"form-control" %>
  </div>
